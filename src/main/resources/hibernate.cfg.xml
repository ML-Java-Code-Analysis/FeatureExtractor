<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/gtsoog
        </property>
        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.password">
            root
        </property>
        <property name="hibernate.default_batch_fetch_size">
            2000
        </property>
        <property name="hibernate.jdbc.fetch_size">
            2000
        </property>
        <property name="hibernate.jdbc.batch_size">
            2000
        </property>
        <mapping class="ba.ciel5.featureExtractor.model.Repository"/>
        <mapping class="ba.ciel5.featureExtractor.model.Version"/>
        <mapping class="ba.ciel5.featureExtractor.model.Commit"/>
        <mapping class="ba.ciel5.featureExtractor.model.File"/>
        <mapping class="ba.ciel5.featureExtractor.model.FeatureValue"/>
        <mapping class="ba.ciel5.featureExtractor.model.Issue" />
    </session-factory>
</hibernate-configuration>